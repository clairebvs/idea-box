<%= form_for [current_user, @idea] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  <%= f.label :image_id %>
  <%= select_tag("image_ids", options_for_select(Image.all.collect { |image| [image.name, image.id] }, @idea.images.collect { |image| image.id}))%>

  <%= f.submit %>
<% end %>
